<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2C2F3D"
    android:id="@+id/theMainParentRelativeLayout"
    tools:context=".AddNewProjects">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/add_new_project_tile"
        android:id="@+id/projectInfoLayout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="4dp"
            android:orientation="vertical">


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:hint="Your Project Name Here!"
                android:paddingStart="14dp"
                android:paddingEnd="10dp"
                android:paddingTop="14dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:paddingBottom="14dp"
                android:fontFamily="@font/montserrat_reg"
                android:textColor="@color/Blender_Dark"
                android:textColorHint="@color/Blender_Dark"
                android:textStyle="bold"
                android:background="@drawable/edit_text_background"
                android:id="@+id/projectNameEditText"
                android:drawableEnd="@drawable/baseline_edit_24"
                android:drawablePadding="2dp"
                android:textSize="20sp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:id="@+id/projectDetailsLinearLayout"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_weight="0.70">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:id="@+id/datesRelativeLayout"
                        android:paddingTop="10dp"
                        android:paddingBottom="4dp"
                        android:background="@drawable/edit_text_background"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:paddingBottom="2dp"
                            android:paddingEnd="6dp"
                            android:paddingStart="6dp"
                            android:id="@+id/startingDateRelativeLayouts">

                            <TextView
                                android:id="@+id/startingOnTextVewDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:alpha="0.65"
                                android:fontFamily="@font/open_sans_reg"
                                android:paddingStart="6dp"
                                android:paddingEnd="4dp"
                                android:text="Starting on:"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                tools:ignore="TextSizeCheck" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="20-Feb-23, 12.00"
                                android:paddingStart="8dp"
                                android:paddingEnd="2dp"
                                android:fontFamily="@font/lato"
                                android:paddingTop="2dp"
                                android:paddingBottom="4dp"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:alpha="0.9"
                                android:id="@+id/projectStartDateTextView"
                                android:textColor="@color/white"
                                android:layout_toRightOf="@+id/startingOnTextVewDescription"
                                android:textSize="16sp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="6dp"
                            android:paddingBottom="6dp"
                            android:paddingEnd="6dp"
                            android:paddingStart="6dp"
                            android:id="@+id/deadlineRelativeLayout"
                            android:layout_below="@+id/startingDateRelativeLayouts">

                            <TextView
                                android:id="@+id/deadlineTextVewDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:alpha="0.65"
                                android:fontFamily="@font/open_sans_reg"
                                android:paddingStart="6dp"
                                android:paddingEnd="4dp"
                                android:text="Set Deadline:"
                                android:textColor="@color/white"
                                android:textSize="12dp"
                                android:textStyle="bold"
                                tools:ignore="TextSizeCheck" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Set Deadline"
                                android:paddingStart="2dp"
                                android:paddingEnd="2dp"
                                android:paddingTop="2dp"
                                android:fontFamily="@font/lato"
                                android:textStyle="bold"
                                android:layout_centerVertical="true"
                                android:id="@+id/projectDeadLineTextView"
                                android:textColor="@color/Blender_Dark"
                                android:layout_toRightOf="@+id/deadlineTextVewDescription"
                                android:textSize="16sp"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="2dp"
                            android:paddingBottom="4dp"
                            android:paddingEnd="6dp"
                            android:paddingStart="6dp"
                            android:layout_below="@+id/deadlineRelativeLayout">



                            <TextView
                                android:id="@+id/setPriorityTextVewDescription"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:alpha="0.65"
                                android:paddingStart="6dp"
                                android:fontFamily="@font/open_sans_reg"
                                android:paddingEnd="4dp"
                                android:text="Project\nImportance:"
                                android:textColor="@color/white"
                                android:textSize="10dp"
                                android:textStyle="bold"
                                tools:ignore="TextSizeCheck" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Low"
                                android:layout_marginTop="2dp"
                                android:background="#55efc4"
                                android:paddingStart="10dp"
                                android:paddingEnd="10dp"
                                android:paddingTop="4dp"
                                android:textAlignment="center"
                                android:layout_centerVertical="true"
                                android:paddingBottom="4dp"
                                android:fontFamily="@font/lato"
                                android:layout_marginStart="26dp"
                                android:layout_marginEnd="26dp"
                                android:textStyle="bold"
                                android:id="@+id/projectImportanceTextView"
                                android:textColor="@color/black"
                                android:layout_toEndOf="@+id/setPriorityTextVewDescription"
                                android:textSize="18sp"/>

                        </RelativeLayout>

                    </RelativeLayout>






                </RelativeLayout>





                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="8dp"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:background="@drawable/primary_element_basic_tile"
                            android:layout_weight="0.65"
                            android:layout_marginStart="2dp"
                            android:paddingEnd="2dp"
                            android:paddingStart="2dp"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_weight="0.65"
                                android:layout_height="0dp">
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="0"
                                    android:fontFamily="@font/montserrat_bold"
                                    android:textAlignment="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/Blender_Dark"
                                    android:layout_centerHorizontal="true"
                                    android:id="@+id/projectPhasesTotalTextView"
                                    android:textSize="38sp"/>

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Total Phases"
                                    android:fontFamily="@font/open_sans_reg"
                                    android:layout_alignParentBottom="true"
                                    android:textAlignment="center"
                                    android:padding="2dp"
                                    android:textStyle="bold"
                                    android:textSize="10sp"/>

                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.35">

                                <TextView
                                    android:id="@+id/projectTagTextViewMain"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:layout_marginStart="6dp"
                                    android:layout_marginTop="6dp"
                                    android:layout_marginEnd="6dp"
                                    android:layout_marginBottom="6dp"
                                    android:alpha="0.8"
                                    android:background="@drawable/tag_background"
                                    android:fontFamily="@font/lato"
                                    android:gravity="center_vertical"
                                    android:text="#Tag"
                                    android:textAlignment="center"
                                    android:textColor="@color/Secondary_Background_Dark"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />




                            </RelativeLayout>





                        </LinearLayout>



                    </LinearLayout>




                </RelativeLayout>




            </LinearLayout>















        </LinearLayout>



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/projectInfoLayout"
        android:id="@+id/addNewPhasesLinearLayouts">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="6dp"
            android:id="@+id/addExtraPhasesLinearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Add new phase:"
                android:padding="2dp"
                android:textSize="16sp"
                android:fontFamily="@font/montserrat_reg"
                android:textColor="#BFC7D0"
                android:textStyle="bold"/>

            <Button
                android:id="@+id/addAnExtraPhase"
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_design_one"
                android:paddingStart="24dp"
                android:paddingTop="4dp"
                android:textSize="10sp"
                android:fontFamily="@font/open_sans_reg"
                android:textStyle="bold"
                android:paddingEnd="24dp"
                android:paddingBottom="4dp"
                android:text="Add Phases"
                android:textColor="#BFC7D0" />


        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/addNewphasesLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/adView"
        android:layout_below="@+id/projectInfoLayout"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="0dp"
        android:visibility="visible">

        <ImageView
            android:id="@+id/workingPandaTextView"
            android:layout_width="220dp"
            android:layout_height="220dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/working_panda" />

        <TextView
            android:id="@+id/chooseTemplateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/workingPandaTextView"
            android:fontFamily="@font/montserrat_reg"
            android:padding="6dp"
            android:layout_marginTop="2dp"
            android:text="Select a project template to get started!"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/addNewPhasesButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/chooseTemplateTextView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_design_two"
            android:fontFamily="@font/open_sans_reg"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:text="Select"
            android:textColor="#2D313D"
            android:textSize="24sp"
            android:textStyle="bold" />


    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adView"
        android:visibility="gone"
        android:id="@+id/phasesRecyclerView"
        android:layout_below="@+id/addNewPhasesLinearLayouts"
        android:layout_marginTop="20dp"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-xxxxx/xxxxx">
    </com.google.android.gms.ads.AdView>



</RelativeLayout>