<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape

            android:shape="ring"
            android:thicknessRatio="26"
            android:useLevel="false">
            <solid
                android:color="@color/Secondary_Background_Dark_light"/>
        </shape>
    </item>



    <item>
        <rotate
            android:fromDegrees="270"
            android:toDegrees="270">
            <shape
                android:shape="ring"
                android:thicknessRatio="22"
                android:useLevel="true">
                <gradient
                    android:startColor="#FF7C7C"
                    android:endColor="#A1D9CC"
                    android:type="sweep"/>
            </shape>
        </rotate>
    </item>

</layer-list>